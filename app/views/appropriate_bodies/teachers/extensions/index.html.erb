<%
  page_data(
    title: "Extensions",
    caption: Teachers::Name.new(@teacher).full_name,
    caption_size: 'm',
    backlink_href: ab_teacher_path(@teacher)
  )
%>

<% @teacher.induction_extensions.each.with_index(1) do |ie, i| %>
  <%=
    govuk_summary_list(card: { title: "Extension #{i}", actions: [govuk_link_to("Edit", "#")] }) do |sl|
      sl.with_row do |row|
        row.with_key(text: "Added on")
        row.with_value(text: ie.created_at.to_date.to_fs(:govuk))
      end

      sl.with_row do |row|
        row.with_key(text: ie.created_at.to_date.to_fs(:govuk))
        row.with_key(text: "Number of terms")
        row.with_value(text: "#{ie.number_of_terms} terms")
      end
    end
  %>
<% end %>
